<GridPane fx:controller="com.example.petranationwidemovies.UserController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" style="-fx-background-color: #FFFFFF;">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <VBox spacing="7" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <padding>
            <Insets right="50" left="50" />
        </padding>

        <VBox alignment="CENTER_LEFT">
            <Label fx:id="bookingMovieName"  style="-fx-font-size: 24px; -fx-font-weight: bold" />
            <Label fx:id="bookingMoviePrice"  style="-fx-font-size: 20px;" />
        </VBox>


        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Total Ticket" />
            <TextField fx:id="totalTicketField" style="-fx-padding: 10px 20px" promptText="Input ticket quantity..."/>
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Payment Method" />
<!--            <TextField fx:id="" style="-fx-padding: 10px 20px" promptText="Input your nrp..."/>-->
            <ChoiceBox fx:id="paymentMethodField"></ChoiceBox>
        </VBox>

        <Label fx:id="errorMessageLabel" textFill="red" />
        <Button fx:id="bookBtn" onAction="#bookButtonClicked" text="Buy Ticket" style="-fx-padding: 8px 30px"/>
    </VBox>


</GridPane>
